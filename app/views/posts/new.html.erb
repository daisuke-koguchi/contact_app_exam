
<%= form_with(model:@post, local: true) do |form| %>
  <% if @post.errors.any?%>
  <div id="errors_massage">
    <h2><%= @post.errors.count%>件のエラーがあります。</h2>
    <ul>  
      <% @post.errors.full_messages.each do |msg|%>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
  <div class="post_title"></div>
    <%= form.label :content %>
    <%= form.text_field :content%>
  </div>
  <%= form.submit %>
<% end %>